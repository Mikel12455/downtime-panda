{% from "macro.html.jinja" import navbar_element %}
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ url_for('index') }}">Downtime Panda</a>
        <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse"
             id="navbarSupportedContent"
             toggle="collapse"
             data-target=".navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {{ navbar_element('Home', 'index') }}
            </ul>
            <div class="d-flex">
                {% if current_user.is_authenticated %}
                    Welcome, {{ current_user.username }}!
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary {{ 'active' if request.path == url_for("logout") else '' }}"
                           href="{{ url_for('logout') }}">Logout</a>
                    </div>
                {% else %}
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary {{ active if request.path == url_for("login") else '' }}"
                           href="{{ url_for('login') }}">Login</a>
                        <a class="btn btn-primary {{ 'active' if request.path == url_for("register") else '' }}"
                           href="{{ url_for('register') }}">Register</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</nav>
