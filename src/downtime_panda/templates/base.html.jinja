{% from "macro.html.jinja" import display_flash_messages %}
<!DOCTYPE html>
<html lang="it">
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <meta name="description"
                  content="Downtime Panda: Monitoraggio e gestione dei tempi di inattività.">
            <meta name="keywords"
                  content="monitoraggio, gestione, inattività, produzione">
            <title>Downtime Panda -
                {% block title %}
                    Add a title to this page for Python's sake!
                {% endblock title %}
            </title>
            <script src="{{url_for('static', filename='js/scripts.js')}}"></script>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
                  rel="stylesheet"
                  integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
                  crossorigin="anonymous">
        {% endblock head %}
    </head>
    <body>
        {% include "base/navbar.html.jinja" %}
        {{ display_flash_messages() }}
        <div class="container p-1">
            {% block body %}
            {% endblock body %}
        </div>
        {% include "base/footer.html.jinja" %}
        <!-- SCRIPTS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
                crossorigin="anonymous"></script>
    </body>
</html>
