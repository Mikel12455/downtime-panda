{% extends "base.html.jinja" %}
{% from "macro.html.jinja" import bootstrap_field %}
{% block title %}
    Your Tokens
{% endblock title %}
{% block body %}
    <h1>Your Tokens</h1>
    <div class="row align-items-center mb-3">
        <div class="col">
            {% if current_user.api_tokens %}
                You currently have {{ current_user.api_tokens|length }} API token(s).
            {% else %}
                You currently have no API tokens. Create one to start using the API.
            {% endif %}
        </div>
        <div class="col">
            <form action="{{ url_for('user.generate_token') }}" method="post">
                <button type="submit" class="btn btn-primary">Create New Token</button>
            </form>
        </div>
    </div>
    <hr />
    {% if current_user.api_tokens %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Token</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for api_token in current_user.api_tokens %}
                    <tr>
                        <td>{{ api_token.token }}</td>
                        <td>{{ moment(api_token.created_at).format("dddd, MMMM Do YYYY, h:mm:ss A") }}</td>
                        <td>
                            <form action="{{ url_for('user.revoke_token', token_id=api_token.id) }}"
                                  method="post">
                                <button type="submit" class="btn btn-danger btn-sm">Revoke</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock body %}
